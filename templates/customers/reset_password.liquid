{% layout settings.customer_layout %}

<div class="page-title subtitle">
	<h1>Reset Your Password</h1>
</div>

<div class="account-form">
	<p>Enter a new password for {{ email }}</p>

	{% form 'reset_customer_password' %}
		{{ form.errors | default_errors }}
		<p>
			<label for="password">Password</label>
			<input type="password" value="" name="customer[password]" id="customer_password" size="16" />
		</p>
		<p>
			<label for="password_confirmation">Password Confirmation</label>
			<input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" size="16" />
		</p>
		<p>
			<input class="btn" type="submit" value="Reset Password" />
		</p>
	{% endform %}
</div>
<div class="featured">
	<div class="image">
		{% assign featured_image = product.selected_or_first_available_variant.featured_image | default: product.featured_image %}
		<a href="{{ featured_image | img_url : 'original' }}" class="MagicZoom" rel="zoom-position: inner; hint: false;" id="placeholder">
			<img src="{{ featured_image  | img_url : 'grande' }}" alt="{{ product.featured_image.alt | escape }}" />
		</a>
	</div>
</div> <!-- /.featured -->

{% if product.images.size > 1 %}
	<div class="thumbs">
		{% for image in product.images %}
			<div class="image">
				<a href="{{ image.src | product_img_url: 'original' }}" rel="zoom-position: inner; hint: false; zoom-id:placeholder" rev="{{ image.src | product_img_url: 'large' }}">
					<img src="{{ image.src | product_img_url: 'compact' }}" alt="{{ image.alt | escape }}" />
				</a>
			</div>
		{% endfor %}
		<div class="image placeholder-image"></div>
		<div class="image placeholder-image"></div>
	</div><!-- /.thumbs -->
{% endif %}